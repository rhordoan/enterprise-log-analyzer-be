
# OpenAI Embeddings
# Application
PROJECT_NAME=Enterprise Log Analyzer
API_PREFIX=/api/v1

# Database (existing app fields; adjust if you use Postgres)
POSTGRES_SERVER=postgres
POSTGRES_USER=fastapi
POSTGRES_PASSWORD=fastapi
POSTGRES_DB=fastapi
# DATABASE_URL overrides the above when set (example):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/dbname

# Embeddings / Chroma
# CHROMA_MODE: "local" uses embedded DuckDB+Parquet; "http" uses a remote Chroma server
CHROMA_MODE=local
CHROMA_PERSIST_DIRECTORY=.chroma
# For CHROMA_MODE=http
CHROMA_SERVER_HOST=localhost
CHROMA_SERVER_PORT=8000

# Embedding model (SentenceTransformers)
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Collections
CHROMA_COLLECTION_PREFIX=templates_
# Final names: templates_macos, templates_linux, templates_windows
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_PROVIDER=openai
